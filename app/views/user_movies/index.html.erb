<h1>Viewing Party Lite</h1>


<%= button_to "Discover Page", "/dashboard/discover", method: :get, params: {:search => nil} %>
  <% if @top_movies %>
  <h2>Top Rated Movies</h2>
    <% @top_movies.each do |movie| %>
      <p><%= link_to "#{movie.title}", "/dashboard/movies/#{movie.id}", params: {:user_id => @user.id} %> Vote Average: <%= movie.vote_average %></p>
    <% end %>

    <% else %>
      <h2> Movie results for: <%= @search %> </h2>
      <% @movies.each do |movie| %>
        <p><%= link_to "#{movie.title}", "/dashboard/movies/#{movie.id}", params: {:user_id => @user.id} %> Vote Average: <%= movie.vote_average%> </p>
      <% end %>
  <% end %>
