<h1>Viewing Party Lite</h1>
<h2>Create a New User</h2>

<%= form_with url: "/register", method: :post, local:true do |form| %>
<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>
  <br>
  <%= form.label :name %>
  <p><%= form.text_field :name %></p>

  <%= form.label :email %>
  <p><%= form.text_field :email %></p>

  <%= form.label :password %>
  <p><%= form.text_field :password %></p>

  <%= form.label :password_confirmation %>
  <p><%= form.text_field :password_confirmation %></p>

  <%= form.submit "Submit" %>
<% end %>
